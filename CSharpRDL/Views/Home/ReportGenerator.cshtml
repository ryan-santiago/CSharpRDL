            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Report Generator</h2>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <!-- ========== tables-wrapper end ========== -->
        <div class="row">
            @*<div class="col-md-4">
                <select class="form-control" id="selFilter">
