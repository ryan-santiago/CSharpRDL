    @model CSharpRDL.Models.User
@{
    ViewBag.Title = "Login";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-3">
        <div style="border:1px black ridge; padding:10px;">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <table height="200" align="center">
                    <tr>
                        <th colspan="2" class="text-center" style="font-size:25px;">LOGIN</th>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.Username)</td>
                        <td>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.Password)</td>
                        <td>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            @ViewBag.ErrorMessage
                        </td>
                    </tr>
                    <tr>

                        <td colspan="2"><input type="submit" name="login" value="Login" class="btn btn-block btn-outline-primary" /></td>
                    </tr>
                </table>
            }
        </div>

    </div>
</div>

